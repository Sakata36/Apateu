def pigeonhole_sort(arr):
    min_val = min(arr)
    max_val = max(arr)
    size = max_val - min_val + 1
    holes = [[] for _ in range(size)]

    for num in arr:
        holes[num - min_val].append(num)

    index = 0
    for hole in holes:
        for num in hole:
            arr[index] = num
            index += 1
    print(f"Pigeonhole sort step: {arr}")  # Show the current state of the array

# Predefined input
arr_pigeonhole = [38, 27, 43, 3, 9, 82, 10, 15]
pigeonhole_sort(arr_pigeonhole)
print("Sorted array:", arr_pigeonhole)
