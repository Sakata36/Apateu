def bingo_sort(arr):
    n = len(arr)
    output = []

    for i in range(n):
        output.append([])

    for num in arr:
        output[num].append(num)

    index = 0
    for bucket in output:
        for num in bucket:
            arr[index] = num
            index += 1
    print(f"Bingo sort step: {arr}")  # Show the current state of the array

# User input
arr_bingo = list(map(int, input("Enter 8 integers for Bingo Sort (space-separated): ").split()))
bingo_sort(arr_bingo)
print("Sorted array:", arr_bingo)
