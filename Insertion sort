def insertion_sort(arr):
    for i in range(1, len(arr)):
        key_item = arr[i]
        j = i - 1
        while j >= 0 and arr[j] > key_item:
            arr[j + 1] = arr[j]
            j -= 1
        arr[j + 1] = key_item
        print(f"Insertion sort step: {arr}")  # Show the current state of the array

# User input
arr_insertion = list(map(int, input("Enter 8 integers for Insertion Sort (space-separated): ").split()))
insertion_sort(arr_insertion)
print("Sorted array:", arr_insertion)
