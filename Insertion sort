def insertion_sort(arr):
    # Traverse through the array from the second element
    for i in range(1, len(arr)):
        key_item = arr[i]
        j = i - 1
        
        # Move elements of arr[0..i-1], that are greater than key_item, to one position ahead of their current position
        while j >= 0 and arr[j] > key_item:
            arr[j + 1] = arr[j]
            j -= 1
        
        arr[j + 1] = key_item
        
        # Print the current state of the array after each insertion
        print(f"Insertion sort step: {arr}")

# Predefined input
arr = [34, 8, 64, 51, 32, 21, 5, 13]  # 8 elements already inputted

print("\nOriginal array:", arr)
insertion_sort(arr)
print("\nSorted array:", arr)
