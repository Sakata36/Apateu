def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        for j in range(0, n - i - 1):
            if arr[j] > arr[j + 1]:
                arr[j], arr[j + 1] = arr[j + 1], arr[j]
        print(f"Bubble sort step: {arr}")  # Show the current state of the array

# User input
arr_bubble = list(map(int, input("Enter 8 integers for Bubble Sort (space-separated): ").split()))
bubble_sort(arr_bubble)
print("Sorted array:", arr_bubble)
