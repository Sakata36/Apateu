# Selection Sort with visible iterations

def selection_sort(arr):
    n = len(arr)
    for i in range(n):
        # Assume the minimum is the first element
        min_idx = i
        # Find the minimum element in remaining unsorted array
        for j in range(i+1, n):
            if arr[j] < arr[min_idx]:
                min_idx = j
        
        # Swap the found minimum element with the first element
        arr[i], arr[min_idx] = arr[min_idx], arr[i]
        
        # Display the array after each iteration
        print(f"Iteration {i + 1}: {arr}")

# User input with 8 elements
arr = []

print("Enter 8 elements:")
for i in range(8):
    element = int(input(f"Element {i+1}: "))
    arr.append(element)

print("\nInitial array:", arr)
print("Starting Selection Sort...\n")

selection_sort(arr)

print("\nSorted array:", arr)
